<article class="content dashboard-page">
  <section class="section">
    <div class="row sameheight-container">
      <div class="col col-xs-12 col-sm-12 col-md-6 col-xl-5 stats-col">
        <div class="card sameheight-item stats" data-exclude="xs">
          <div class="card-block" style="padding: 20px 40px;">
            <div class="title-block">
              <h4 class="title"> Dashboard </h4>
            </div>
            <div class="row row-sm stats-container">
              <div class="col-xs-12 col-sm-6 stat-col" style="margin-bottom: 25px">
                <div class="stat-icon"> <i class="fa fa-users"></i> </div>
                <div class="stat">
                  <div class="value"> <%= @total_players %> </div>
                  <div class="name"> Total users </div>
                </div>
                <progress class="progress stat-progress" value="34" max="100">
                  <div class="progress">
                    <span class="progress-bar" style="width: 34%;"></span>
                  </div>
                </progress>
              </div>
              <div class="col-xs-12 col-sm-6 stat-col" style="margin-bottom: 25px">
                <div class="stat-icon"> <i class="fa fa-rocket"></i> </div>
                <div class="stat">
                  <div class="value"> <%= @total_contests %> </div>
                  <div class="name"> Total contests </div>
                </div>
                <progress class="progress stat-progress" value="75" max="100">
                  <div class="progress">
                    <span class="progress-bar" style="width: 75%;"></span>
                  </div>
                </progress>
              </div>
              <div class="col-xs-12 col-sm-6 stat-col" style="margin-bottom: 25px">
                <div class="stat-icon"> <i class="fa fa-dollar"></i> </div>
                <div class="stat">
                  <div class="value"> <%= @total_conomy %> </div>
                  <div class="name"> Lootconomy </div>
                </div>
                <progress class="progress stat-progress" value="15" max="100">
                  <div class="progress">
                    <span class="progress-bar" style="width: 15%;"></span>
                  </div>
                </progress>
              </div>
              <div class="col-xs-12 col-sm-6 stat-col" style="margin-bottom: 25px">
                <div class="stat-icon"> <i class="fa fa-shopping-cart"></i> </div>
                <div class="stat">
                  <div class="value"> <%= @total_prizes %> </div>
                  <div class="name"> Prizes Claimed </div>
                </div>
                <progress class="progress stat-progress" value="25" max="100">
                  <div class="progress">
                    <span class="progress-bar" style="width: 25%;"></span>
                  </div>
                </progress>
              </div>
              <div class="col-xs-12 col-sm-6 stat-col" style="margin-bottom: 25px">
                <div class="stat-icon"> <i class="fa fa-line-chart"></i> </div>
                <div class="stat">
                  <div class="value"> <%= @total_tax %> </div>
                  <div class="name"> Taxes Collected </div>
                </div>
                <progress class="progress stat-progress" value="60" max="100">
                  <div class="progress">
                    <span class="progress-bar" style="width: 60%;"></span>
                  </div>
                </progress>
              </div>
              <div class="col-xs-12 col-sm-6 stat-col" style="margin-bottom: 25px">
                <div class="stat-icon"> <i class="fa fa-list-alt"></i> </div>
                <div class="stat">
                  <div class="value"> <%= @total_signin %> % </div>
                  <div class="name"> Log Ins </div>
                </div>
                <progress class="progress stat-progress" value="49" max="100">
                  <div class="progress">
                    <span class="progress-bar" style="width: 49%;"></span>
                  </div>
                </progress>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col col-xs-12 col-sm-12 col-md-6 col-xl-7 history-col">
        <div class="card sameheight-item" data-exclude="xs">
          <div class="card-header card-header-sm bordered">
            <div class="header-block">
              <h3 class="title">The Rich List</h3>
            </div>
            <%#<ul class="nav nav-tabs pull-right" role="tablist">
              <li class="nav-item"> <a class="nav-link active" href="#visits" role="tab" data-toggle="tab">Visits</a> </li>
              <li class="nav-item"> <a class="nav-link" href="#downloads" role="tab" data-toggle="tab">Downloads</a> </li>
            </ul>%>
          </div>
          <div class="card-block">
            <div class="tab-content">
              <%#<div role="tabpanel" class="tab-pane active fade in" id="visits">
                <p class="title-description"> Number of unique visits last 30 days </p>
                <div id="dashboard-visits-chart"></div>
              </div>
              <div role="tabpanel" class="tab-pane fade" id="downloads">
                <p class="title-description"> Number of downloads last 30 days </p>
                <div id="dashboard-downloads-chart"></div>
              </div>%>
              <table class="table table-striped">
                <tbody>
                  <% @richs.each do |rich| %>
                  <tr>
                    <th scope="row"><%= rich.username %></th>
                    <td><%= rich.coins %> coins</td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-block">
            <div class="card-title-block">
              <h3 class="title"> Upcoming contest </h3>
            </div>
            <section class="example">
              <table class="table">
                <thead>
                  <tr>
                    <th>Program</th>
                    <th>Contest</th>
                    <th>Player</th>
                    <th>Start</th>
                  </tr>
                </thead>
                <tbody>
                  <% @contests.each do |contest| %>
                    <tr>
                      <th scope="row"><%= contest.try(:template).try(:program).try(:name) %></th>
                      <td><%= contest.name %></td>
                      <td><%= contest.max_players %></td>
                      <td><%= contest.template.end_time.try(:strftime, "%B %d, %Y %H:%M:%S") %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </section>
          </div>
        </div>
      </div>
    </div>
  </section>

</article>
