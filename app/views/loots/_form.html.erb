<%= form_for(loot, url: loot_path(loot), html: { method: :put }) do |f| %>
  <% if loot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(loot.errors.count, "error") %> prohibited this loot from being saved:</h2>

      <ul>
      <% loot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group"> <label class="control-label">Free coins base</label>
    <%= f.text_field :daily_loot, class: 'form-control' %>
  </div>
  <div class="form-group"> <label class="control-label">Min Consecutive login</label>
    <%= f.text_field :min_consecutive, class: 'form-control' %>
  </div>
  <div class="form-group"> <label class="control-label">Max Consecutive login</label>
    <%= f.text_field :max_consecutive, class: 'form-control' %>
  </div>
  <div class="form-group"> <label class="control-label">More coin per consecutive</label>
    <%= f.text_field :more_coin, class: 'form-control' %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
