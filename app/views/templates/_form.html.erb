<%= form_for(template, html: { class: 'item' }) do |f| %>
  <% if template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(template.errors.count, "error") %> prohibited this template from being saved:</h2>

      <ul>
      <% template.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card card-block">
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Name: </label>
      <div class="col-sm-4">
        <%= f.text_field :name, class: 'form-control boxed' %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Program: </label>
      <div class="col-sm-10">
        <%= f.select :program,
                    options_for_select(@programs.pluck(:name, :id),
                    selected: @template.program_id),
                    class: 'c-select form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Number Questions: </label>
      <div class="col-sm-10">
        <%= f.select :number_questions,
                    options_for_select((2..30), @template.number_questions),
                    class: 'c-select form-control boxed' %>

      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Number Answers: </label>
      <div class="col-sm-10">
        <%= f.select :number_answers,
                    options_for_select((2..10), @template.number_answers),
                    class: 'c-select form-control boxed' %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Start Date & Time : </label>
      <div class="col-sm-4">
        <%= f.text_field :start_time, value: @template.start_time, class: "form-control", id: 'datetimepicker1' %>
      </div>

      </div>

    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> End Date & Time : </label>
      <div class="col-sm-4">
        <%= f.text_field :end_time, value: @template.end_time, class: "form-control", id: 'datetimepicker2' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit 'Submit', class: 'btn btn-primary btn-submit' %>
      </div>
    </div>
  </div>

<% end %>
