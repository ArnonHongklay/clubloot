
<article class="content item-editor-page">
  <div class="title-block">
    <h3 class="title">
      Advert <span class="sparkline bar" data-type="bar"></span>
    </h3>
  </div>

  <p>
    <strong>Attachment:</strong>
    <%= image_tag @advert.attachment, with: 120, height: 120 %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @advert.description %>
  </p>

  <p>
    <strong>Daily at:</strong>
    <%= @advert.daily_at.try(:strftime, "%B %d, %Y") %>
  </p>

  <div class="row">
    <div class="col-xs-12">
      <table class="table table-bordered table-hover flip-content">
        <thead class="flip-header">
          <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= link_to 'Get Prize', "user", data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= link_to 'Edit', edit_advert_path(@advert), class: 'btn btn-primary btn-sm rounded-s' %>
  <%= link_to 'Back', adverts_path, class: 'btn btn-primary btn-sm rounded-s' %>
</article>
