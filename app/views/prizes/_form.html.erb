<%= form_for(prize, html: { class: 'item' }) do |f| %>
  <% if prize.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(prize.errors.count, "error") %> prohibited this prize from being saved:</h2>

      <ul>
      <% prize.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="card card-block">
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Name: </label>
      <div class="col-sm-4">
        <%= f.text_field :name, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Price: </label>
      <div class="col-sm-4">
        <%= f.number_field :price, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Quantity: </label>
      <div class="col-sm-4">
        <%= f.number_field :quantity, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Description: </label>
      <div class="col-sm-6">
        <%= f.text_area :description, class: 'form-control boxed', cols: 40, rows: 5 %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right" for=""> Attachment: </label>
      <div class="col-sm-4">
        <%= f.file_field :attachment %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

<% end %>
