<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card card-block">
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Name: </label>
      <div class="col-sm-4">
        <%= f.text_field :name, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Username: </label>
      <div class="col-sm-4">
        <%= f.text_field :username, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> First name: </label>
      <div class="col-sm-4">
        <%= f.text_field :first_name, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Last name: </label>
      <div class="col-sm-4">
        <%= f.text_field :last_name, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Address: </label>
      <div class="col-sm-4">
        <%= f.text_field :billing_address, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> City: </label>
      <div class="col-sm-4">
        <%= f.text_field :billing_city, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> State: </label>
      <div class="col-sm-4">
        <%= f.text_field :billing_state, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Zipcode: </label>
      <div class="col-sm-4">
        <%= f.text_field :billing_zipcode, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Diamonds: </label>
      <div class="col-sm-4">
        <%= f.number_field :diamonds, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Emeralds: </label>
      <div class="col-sm-4">
        <%= f.number_field :emeralds, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Sapphires: </label>
      <div class="col-sm-4">
        <%= f.number_field :sapphires, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Rubies: </label>
      <div class="col-sm-4">
        <%= f.number_field :rubies, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label text-xs-right"> Name: </label>
      <div class="col-sm-4">
        <%= f.number_field :coins, class: 'form-control boxed' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
