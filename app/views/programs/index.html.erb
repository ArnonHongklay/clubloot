
<article class="content items-list-page">
  <div class="title-search-block">
    <div class="title-block">
      <div class="row">
        <div class="col-md-6">
          <h3 class="title">
            Programs
            <%= link_to 'Add New', new_program_path, class: 'btn btn-primary btn-sm rounded-s' %>
          </h3>
        </div>
      </div>
    </div>

    <div class="items-search">
      <form class="form-inline">
        <div class="input-group">
          <input type="text" class="form-control boxed rounded-s" placeholder="Search for..."> <span class="input-group-btn">
          <button class="btn btn-secondary rounded-s" type="button">
          <i class="fa fa-search"></i>
          </button>
          </span>
        </div>
      </form>
    </div>
  </div>

  <section class="section">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-block">
            <section class="example">
              <div class="table-flip-scroll">
                <table class="table table-bordered table-hover flip-content">
                  <thead class="flip-header">
                    <tr>
                      <th>Status</th>
                      <th>Picture</th>
                      <th>Name</th>
                      <th>&nbsp;</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @programs.each do |program| %>
                      <tr class="odd gradeX">
                        <td class="center-center">
                          <%= link_to toggle_status_program_path(program), method: :put, data: { confirm: 'Are you sure?' } do %>
                            <% if program.active %>
                              <i class="fa fa-pause fa-3x" style="color: red"></i>
                            <% else %>
                              <i class="fa fa-play fa-3x" style="color: green"></i>
                            <% end %>
                          <% end %>
                        </td>
                        <td><%= image_tag program.attachment, width: 120, height: 120 %></td>
                        <td class="center-left"><%= program.name %></td>
                        <td class="center-center"><%= link_to 'Edit', edit_program_path(program) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </section>
          </div>
        </div>
      </div>
    </div>
  </section>
</article>
